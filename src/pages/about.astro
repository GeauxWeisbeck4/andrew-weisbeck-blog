---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "About Andrew";
const identity = {
  firstName: "Andrew",
  country: "homeless in the United States",
  occupation: "Freelance Web Developer who currently panhandles to survive",
  hobbies: ["coding", "reading", "watching sports"],
  teams: ["Nebraska Cornhuskers", "North Carolina Tarheels", "LSU Tigers", "Kansas City Royals", "New England Patriots", "Minnesota Timberwolves"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Jamstack", "Python"];

const happy = true;
const employed = false;
const unemployed = true;
const goal = 30;

const skillColor = "navy";
const fontWeight="bold";
const textCase="uppercase";
const huskers = "#E41C38";
const tarheels = "#7BAFD4";
const tigers = ["#461D7C", "#FDD023"];
const royals = ["#004687", "#BD9B60"];
const patriots = ["#002244", "#C60C30", "#B0B7BC"];
const timberwolves = ["#0C2340", "#236192", "#9EA2A2", "#78BE20"];
---
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{pageTitle}</title>
        <style define:vars={{skillColor, fontWeight, textCase}}>
            .skill {
              color: var(--skillColor);
              font-weight: var(--fontWeight);
              text-transform: var(--textCase);
            }
          </style>
    </head>
    <body>
        <Header />

        <h1>{pageTitle}</h1>
        <p>Here are a few things you should know about me:</p>
        <ul>
            <li>My name is {identity.firstName}.</li>
            <li>I currently am {identity.country} and it is next to nearly impossible to get out of homelessness without any kind of miracle. So much for being the richest country in the world...</li>
            <li>I am a {identity.occupation} who would love an opportunity to show any company my skill set. I am seeking employment currently to help me change my current situation.</li>
            {identity.hobbies.length >= 2 &&
                <li>Three of my favorite hobbies are: {identity.hobbies[0]},  {identity.hobbies[1]}, and {identity.hobbies[2]}.</li>
              }
        </ul>
        <p class=""></p>
        <p>My skills are:</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>

        {happy && <p>My current mood is happy and grateful for life!</p>}

        {employed && <p>I am currently employed!</p>}

        {unemployed && <p>I am currently unemployed and am willing to work just about anywhere!</p>}

        {goal === 30 ? <p>My goal is to find a programming job in the next 30 days.</p> : <p>My goal is to get a job in the next 3 months.</p>}

        <Footer />
        <script>
			import "../scripts/menu.js";
		</script>
      </body>
</html>

